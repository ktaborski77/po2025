<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.samochodgui.HelloController">
    <top>
        <VBox>
            <children>
                <MenuBar fx:id="menuBar">
                    <menus>
                        <Menu text="Plik">
                            <items>
                                <MenuItem fx:id="closeMenuItem" onAction="#onCloseMenu" text="Close" />
                            </items>
                        </Menu>
                        <Menu text="Edycja">
                            <items>
                                <MenuItem fx:id="deleteMenuItem" onAction="#onDeleteCarButton" text="Delete" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar fx:id="toolBar">
                    <items>
                        <ComboBox fx:id="carComboBox" onAction="#onCarSelection" prefWidth="150.0" promptText="Wybierz samochód" />
                        <Button fx:id="addCarButton" onAction="#openAddCarWindow" text="Dodaj nowy" />
                        <Button fx:id="deleteCarButton" onAction="#onDeleteCarButton" text="Usuń" />
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <left>
        <ScrollPane fx:id="leftScrollPane" fitToWidth="true" pannable="true">
            <content>
                <VBox prefWidth="250.0" spacing="10">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <TitledPane fx:id="carTitledPane" animated="false" text="Samochód">
                            <content>
                                <GridPane hgap="10" vgap="5">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="95.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="145.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Model" GridPane.rowIndex="0" />
                                        <TextField fx:id="modelTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Nr rejestracyjny" GridPane.rowIndex="1" />
                                        <TextField fx:id="plateTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Waga" GridPane.rowIndex="2" />
                                        <TextField fx:id="weightTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Prędkość" GridPane.rowIndex="3" />
                                        <TextField fx:id="speedTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                            <children>
                                                <Button fx:id="startButton" onAction="#onStartButton" text="Włącz" />
                                                <Button fx:id="stopButton" onAction="#onStopButton" text="Wyłącz" />
                                                <Button fx:id="driveButton" onAction="#onDriveButton" text="Jedź" />
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane fx:id="gearboxTitledPane" animated="false" text="Skrzynia Biegów">
                            <content>
                                <GridPane hgap="10" vgap="5">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="95.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="145.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Nazwa" GridPane.rowIndex="0" />
                                        <TextField fx:id="gearboxNameTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Cena" GridPane.rowIndex="1" />
                                        <TextField fx:id="gearboxPriceTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Waga" GridPane.rowIndex="2" />
                                        <TextField fx:id="gearboxWeightTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Bieg" GridPane.rowIndex="3" />
                                        <TextField fx:id="gearboxGearTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                            <children>
                                                <Button onAction="#onIncreaseGearButton" text="Bieg +" />
                                                <Button onAction="#onDecreaseGearButton" text="Bieg -" />
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane fx:id="engineTitledPane" animated="false" text="Silnik">
                            <content>
                                <GridPane hgap="10" vgap="5">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="95.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="145.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Nazwa" GridPane.rowIndex="0" />
                                        <TextField fx:id="engineNameTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Cena" GridPane.rowIndex="1" />
                                        <TextField fx:id="enginePriceTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Waga" GridPane.rowIndex="2" />
                                        <TextField fx:id="engineWeightTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Obroty" GridPane.rowIndex="3" />
                                        <TextField fx:id="engineRpmTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                            <children>
                                                <Button onAction="#onIncreaseRpmButton" text="Gaz" />
                                                <Button onAction="#onDecreaseRpmButton" text="Hamulec" />
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane fx:id="clutchTitledPane" animated="false" text="Sprzęgło">
                            <content>
                                <GridPane hgap="10" vgap="5">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="95.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="145.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Nazwa" GridPane.rowIndex="0" />
                                        <TextField fx:id="clutchNameTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Cena" GridPane.rowIndex="1" />
                                        <TextField fx:id="clutchPriceTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Waga" GridPane.rowIndex="2" />
                                        <TextField fx:id="clutchWeightTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Stan" GridPane.rowIndex="3" />
                                        <TextField fx:id="clutchStateTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                            <children>
                                                <Button onAction="#onPressClutchButton" text="Naciśnij" />
                                                <Button onAction="#onReleaseClutchButton" text="Zwolnij" />
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </left>
    <center>
        <AnchorPane fx:id="mapPane" style="-fx-background-color: lightgreen;">
            <children>
                <Label fx:id="mapLabel" layoutX="20.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Mapa" />
                <ImageView fx:id="carImageView" fitHeight="60.0" fitWidth="100.0" layoutX="20.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="carLabel" layoutX="20.0" layoutY="160.0" style="-fx-font-size: 14px;" text="Car Simulation" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>